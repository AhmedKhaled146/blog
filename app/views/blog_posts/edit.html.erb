<%= form_for @blog do |f| %>
    <% if @blog.errors.any? %>
        <% @blog.errors.full_messages.each do |msg| %>
            <%= msg %>
        <% end %>
    <% end %>
    <%= f.label :title %>:
    <%= f.text_field :title %><br/>

    <%= f.label :body %>:
    <%= f.text_area :body %><br/>

    <%= f.submit %>
<% end %>
<%= link_to "back", @blog %>
